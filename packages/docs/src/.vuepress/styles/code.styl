// Prism Theme
// https://github.com/PrismJS/prism-themes/blob/master/themes/prism-material-light.css

pre[class*="language-"]
  font-size: 1em

code[class*="language-"]
  line-height: 1

code,
kbd,
code[class*="language-"]
  font-size: 0.875em

div[class*="language-"]
  background-color: #2d2b55

pre,
pre[class*="language-"]
  line-height: 1.4
  padding: 1.25rem 1.5rem
  margin: 0.85rem 0
  border-radius: 6px
  overflow: auto
  background-color: #2d2b55

.code-example > pre,
.code-example > pre[class*="language-"]
.code-example > div[class*="language-"]
  border-radius: 0 0 6px 6px

[class*="language-"] code,
[class*="language-"] pre
  background-color: transparent !important
  color: #ccc

[class*="language-"] code
  padding: 0

.token.highlight
  border-radius: .1875rem;
  padding: .0625rem .1875rem;
  margin: 0 -.1875rem;
  color: currentColor !important

